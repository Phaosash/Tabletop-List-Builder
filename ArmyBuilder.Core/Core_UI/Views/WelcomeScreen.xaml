<UserControl x:Class="Core_UI.Views.WelcomeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Core_UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1360">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.33*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.33*" />
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Available Builders:" FontSize="18" 
                           FontWeight="SemiBold" Margin="5" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!--    HH Button   -->
                    <Button Margin="5" MaxWidth="250" BorderThickness="0" 
                            Background="Black" Cursor="Hand">
                        <Image Source="/Images/HHLogo.png" Margin="5" />
                    </Button>

                    <!--    Armada Button   -->
                    <Button Margin="5" IsEnabled="False" MaxWidth="250"
                            Cursor="Hand">
                        <Image Source="/Images/HHLogo.png" Margin="5" />
                    </Button>

                    <!--    X-Wing Button   -->
                    <Button Margin="5" IsEnabled="False" MaxWidth="250"
                            Cursor="Hand">
                        <Image Source="/Images/HHLogo.png" Margin="5" />
                    </Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
